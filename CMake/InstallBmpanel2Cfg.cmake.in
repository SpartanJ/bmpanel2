MESSAGE(STATUS "Installing bmpanel2cfg...")

SET(BMPANEL2CFG_DESTDIR @CMAKE_CURRENT_BINARY_DIR@)
IF(IS_ABSOLUTE $ENV{DESTDIR})
	SET(BMPANEL2CFG_DESTDIR $ENV{DESTDIR})
ELSE(IS_ABSOLUTE $ENV{DESTDIR})
	SET(BMPANEL2CFG_DESTDIR "@CMAKE_CURRENT_BINARY_DIR@/$ENV{DESTDIR}")
ENDIF(IS_ABSOLUTE $ENV{DESTDIR})

MESSAGE(STATUS @CMAKE_CURRENT_SOURCE_DIR@)
MESSAGE(STATUS @CMAKE_CURRENT_BINARY_DIR@)
MESSAGE(STATUS @PYTHON_EXECUTABLE@)

EXECUTE_PROCESS(COMMAND @PYTHON_EXECUTABLE@ setup.py build -b @CMAKE_CURRENT_BINARY_DIR@/extra/py install --root=${BMPANEL2CFG_DESTDIR}
		WORKING_DIRECTORY @CMAKE_CURRENT_SOURCE_DIR@/extra/py)
